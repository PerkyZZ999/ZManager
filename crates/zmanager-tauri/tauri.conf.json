{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ZManager",
  "identifier": "com.zmanager.app",
  "version": "0.1.0",
  "build": {
    "devUrl": "http://localhost:5173",
    "frontendDist": "./gui/dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "../../assets/ZManager_Icon.png"
    ],
    "windows": {
      "allowDowngrades": true
    }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ZManager",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": false,
        "transparent": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
